@{
}
@model List<EcommerceManagementProject.Models.Domain.CategoryModel>

<partial name="_Notification" />

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-6">
            <h3 class="mb-4">CATEGORY LIST</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Add">
                <i class="bi bi-plus-circle"></i>
                ADD NEW CATEGORY
            </a>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                @if (Model.Count == 0)
                {
                    <h1 class="text-center">NO CATEGORY ADDED AS OF NOW!</h1>
                }
                else
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Category Id</th>
                                <th scope="col">Category Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.CategoryId</td>
                                    <td>@category.CategoryName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
