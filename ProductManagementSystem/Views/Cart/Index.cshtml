<div class="container-fluid mb-5 ">
    @foreach (var item in Model)
    {
        <div class="row d-flex  flex-column align-items-center ">
            <div class="col col-lg-8 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center p-1 product-card"
                             @* style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;" *@>
                            <img src="~/image/@item.Product.ProductImageURL"
                                 alt="Product" class="img-fluid my-3" style="width:15rem" />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6 class="fw-bold">Order Details</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <h6>Product Name</h6>
                                        <p class="text-muted">@item.Product.ProductName</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <h6>Product Price</h6>
                                        <p class="text-muted">&#8377; @item.Product.ProductPrice</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <h6>Quantity</h6>
                                        <p class="text-muted">@item.CartItems</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <h6>Amount</h6>
                                        <p class="text-muted">&#8377; @(item.Product.ProductPrice * item.CartItems)</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <div class="d-flex justify-content-between">
                                            <a asp-action="OrderDelete" asp-controller="Cart" asp-route-id="@item.CartId" class="btn btn-danger remove">Remove from cart</a>
                                        </div>
                                        <div class="amount-box d-flex align-items-center">
                                            <a asp-action="Reduce" asp-controller="Cart" asp-route-id="@item.CartId" class="minus-box">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                            <div>@item.CartItems</div>
                                            <a asp-action="Add" asp-controller="Cart" asp-route-id="@item.ProductId" class="plus-box">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/ProductTable.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add click event to the "Deactive" button
            $('.remove').on('click', function (e) {
                e.preventDefault();

                // Get the product ID from the button's data-id attribute
                var productId = $(this).data('id');

                // Show SweetAlert2 confirmation dialog
                Swal.fire({
                    title: "Are you sure to Remove it?",
                    text: "You can't revert this!!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Remove it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Perform the deactivation action
                        window.location.href = $(this).attr('href');
                    }
                });
            });
        });
    </script>
}