@model List<EcommerceManagementProject.Models.Domain.CartsModel>;
@using Microsoft.AspNetCore.Identity
@using EcommerceManagementProject.Models.Domain;
@inject SignInManager<UserModel> signInManager;

@{
    ViewData["Title"] = "Cart";
}

@if (!signInManager.IsSignedIn(User))
{
    <h1 class="text-danger text-center">Please login to View your Cart</h1>
    return;
}

@if (Model.Count <= 0)
{
    <h1 class="text-danger text-center">No Products in Cart</h1>
    return;
}

