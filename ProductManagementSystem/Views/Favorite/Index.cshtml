@model List<EcommerceManagementProject.Models.Dto.FavoProductDto>;
@using Microsoft.AspNetCore.Identity
@using EcommerceManagementProject.Models.Domain;
@inject SignInManager<UserModel> signInManager;

@if(!signInManager.IsSignedIn(User))
{
    <h1 class="text-danger text-center">Please login to View your Favorites</h1>
    return;
} 

@if(Model.Count <= 0)
{
    <h1 class="text-danger text-center">No Products to Show</h1>
    return;
}

<div class="container-fluid mb-5" style="background-color:aqua">
    @foreach (var item in Model)
    {
        <div class="row d-flex  flex-column align-items-center ">
            <div class="col col-lg-8 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-3 gradient-custom text-center p-1"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="~/image/@item.ProductImageURL"
                                 alt="Product" class="img-fluid my-3" style="width:15rem" />
                        </div>
                        <div class="col-md-9">
                            <div class="card-body p-4">
                                <h6 class="fw-bold">Order Details</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <h6>Product Name</h6>
                                        <p class="text-muted">@item.ProductName</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <h6>Product Price</h6>
                                        <p class="text-muted">&#8377; @item.ProductPrice</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-9 mb-1 d-flex justify-content-between">
                                        <div class="d-flex justify-content-between" style="width:18rem">
                                            <a asp-action="Delete" asp-controller="Favorite" asp-route-id="@item.FavId" class="btn btn-danger">Remove from Favorites</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
